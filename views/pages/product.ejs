<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<style>
	.container {
		background-image: url("bg.png");
		background-size: cover;
		background-position: center center	;
	}
	h1 {
		color: #DB00B6;
		text-align: center;
		font-size: 32px;
		margin-bottom: 2rem;
	}
	label {
		color: #4361EE;
	}
	button {
		background-color: #B5179E !important;
	}

	button:focus, input:focus {
		outline: none;
		border: 0;
		box-shadow: none;
	}
	.btn {
		border: none;
		width: 300px;
	}
	.btn-container {
		margin-top: 4rem;
		display: flex;
		justify-content: center;
	}
	input {
		max-width: 40%;
	}
</style>
<body class="container">




<main>
  <div class="">
    <h1>Product Type</h1>

    <form action="/add-type/" enctype="multipart/form-data" method="post">

		<% if(typeof alert != 'undefined') { %>
            <% alert.forEach(function(error) { %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <%= error.msg %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">Ã—</span>
                    </button>
                  </div>
            <% }) %>
        <% } %>

      
		<div class="form-group row">
        	<label for="inputPassword" class="col-sm-2 col-form-label">Type Code</label>
			<div class="col-sm-10">
				<input type="text" name="type_code" class="form-control" >
			</div>
		</div>

		<div class="form-group row">
        	<label for="inputPassword" class="col-sm-2 col-form-label" >Markup %</label>
			<div class="col-sm-10">
				<input type="number" name="markup" min="0" max="900" class="form-control" >
			</div>
		</div>

		<div class="form-group row">
        	<label for="inputPassword" class="col-sm-2 col-form-label">Markup Active Date</label>
			<div class="col-sm-10">
				<input type="date" name="markup_active_date" class="form-control" >
			</div>
		</div>

		<div class="form-group row">
        	<label for="inputPassword" class="col-sm-2 col-form-label">Type Pic</label>
			<div class="col-sm-10">
				<input type="file" name="file" class="form-control" >
			</div>
		</div>

		<div class="form-group row">
        	<label for="inputPassword" class="col-sm-2 col-form-label">Type Description</label>
			<div class="col-sm-10">
				<!-- <input type="text" name="type_description" class="form-control" > -->
				<textarea name="type_description" class="form-control" rows="5"></textarea>
			</div>
			
		</div>

		<div class="btn-container">
			<button type="submit" class="btn btn-primary btn-lg">Add Type</button>
		</div>

    </form>

  </div>
</main>



</body>
</html>